<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up Form</title>
  <!-- MDB and Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet">
</head>
<body>

<!-- Section: Design Block -->
<section class="text-center text-lg-start">
  <style>
    .cascading-right {
      margin-right: -50px;
    }

    @media (max-width: 991.98px) {
      .cascading-right {
        margin-right: 0;
      }
    }
  </style>

  <!-- Jumbotron -->
  <div class="container py-4">
    <div class="row g-0 align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="card cascading-right bg-body-tertiary" style="backdrop-filter: blur(30px);">
          <div class="card-body p-5 shadow-5 text-center">
            <h2 class="fw-bold mb-5">Sign up now</h2>
            {{ form_start(form) }}

            <!-- Nom Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.nom.vars.id }}">Nom</label>
                {{ form_errors(form.nom) }}
            </div>

            <!-- Adresse Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.adresse.vars.id }}">Adresse</label>
                {{ form_errors(form.adresse) }}
            </div>

            <!-- CIN Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.cin.vars.id }}">CIN</label>
                {{ form_errors(form.cin) }}
            </div>

            <!-- Prénom Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.prenom.vars.id }}">Prénom</label>
                {{ form_errors(form.prenom) }}
            </div>

            <!-- Mot de Passe (MDP) Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.mdp.vars.id }}">Mot de Passe</label>
                {{ form_errors(form.mdp) }}
            </div>

            <!-- Role Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.role.vars.id }}">Rôle</label>
                {{ form_errors(form.role) }}
            </div>

            <!-- Image Input -->
            <div data-mdb-input-init class="form-outline mb-4">
                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                <label class="form-label" for="{{ form.image.vars.id }}">Image</label>
                {{ form_errors(form.image) }}
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Ajouter</button>

            {{ form_end(form) }}

            <!-- Register buttons -->
            <div class="text-center">
    <p>or sign up with:</p>
    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
        <i class="fab fa-facebook-f text-dark"></i> <!-- Use 'text-dark' for black color -->
    </button>

    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-3">
        <i class="fab fa-google text-dark"></i>
    </button>

    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
        <i class="fab fa-twitter text-dark"></i>
    </button>

    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-link btn-floating mx-1">
        <i class="fab fa-github text-dark"></i>
    </button>
</div>

          
          </div>
        </div>
      </div>

      <div class="col-lg-6 mb-5 mb-lg-0">
        <img src="https://th.bing.com/th/id/R.c90546123db8c63bc25fd5d30fb0e60d?rik=Daehw%2fwiJYONlg&riu=http%3a%2f%2fhonoris.ac.mu%2fwp-content%2fuploads%2f2020%2f12%2fesprit-100.jpg&ehk=PThZLi6UABl3ctigAQYGaahFH4L8ENCM4ix%2bbFI15QU%3d&risl=&pid=ImgRaw&r=0" class="w-100 rounded-4 shadow-4" alt="" />
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->




<!-- MDB and Bootstrap JS -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
</body>
</html>
